<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <form method="POST" action="/course/handle-edit/{{Course._id}}?_method=PUT">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Title</label>
                <input type="text" class="form-control" value="{{Course.title}}" id="title" name="title" placeholder="Your course title">
            </div>
        </div>
         <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Link video youtube</label>
                <input type="text" class="form-control" value="https://www.youtube.com/watch?v={{Course.code_video}}" id="code_video" name="code_video" placeholder="Link Youtube">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Content</label>
            <textarea type="text" class="form-control"  name="body" id="body">{{Course.body}}</textarea>
        </div>
        <div class="form-group">
            <label for="file-upload" class="custom-file-upload">
                <i class="fa fa-cloud-upload"></i> Upload Image
            </label>
            <input type="file" id="file-upload" name='img' type="img">
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
    </form>
</div>
