<div class="mt-4">
    <div class="row">
        {{#each Courses}}
            <div class="col-sm-6 col-lg-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{this.img}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">
                        {{this.body}} 
                        </p>
                        <a href="" class="card-link">{{this.insert_date}}</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>